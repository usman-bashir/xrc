<?xml version="1.0" encoding="utf-8" ?>
<xrc:page xmlns:xrc="urn:xrc"
         xmlns:File="xrc:FileModule">

	<xrc:parameters>
		<xrc:add key="title" value="My books" />
		<xrc:add key="activeMenu" value="books" />
	</xrc:parameters>

	<xrc:action method="GET" parent="~/shared/_layout">
		<xrc:view type="XsltView">
			<xslt>@File.Xml("index.xslt")</xslt>
			<data>@File.Xml("books.xml")</data>
		</xrc:view>
	</xrc:action>

</xrc:page>
