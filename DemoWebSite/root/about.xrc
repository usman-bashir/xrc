<?xml version="1.0" encoding="utf-8" ?>
<xrc:page xmlns:xrc="urn:xrc">

  <!-- Example using an inline xhtml content -->
  
	<xrc:action method="GET" parent="~/shared/_layout">
		<xrc:renderer type="XHtmlRenderer">
      <content>
        <div>
          This is the <b>about</b> page!
        </div>
      </content>
    </xrc:renderer>
  </xrc:action>

	<xrc:parameters>
		<xrc:add key="title" value="About" />
    <xrc:add key="activeMenu" value="about" />
  </xrc:parameters>

</xrc:page>
