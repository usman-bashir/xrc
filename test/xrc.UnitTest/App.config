<?xml version="1.0" encoding="utf-8" ?>
<configuration>

	<configSections>
		<section name="xrc" type="xrc.Configuration.XrcSection, xrc" />
	</configSections>

	<xrc>
		<rootPath virtualPath="~/sampleWebSiteStructure" />
		<sites>
			<add key="en" uriPattern="https?://www\.northwind\.com(:80|:443)?/">
				<parameters>
				</parameters>
			</add>
			<add key="it" uriPattern="http://it\.northwind\.com">
				<parameters>
					<add key="culture" value="it" />
				</parameters>
			</add>
			<add key="local" uriPattern="https?://localhost:(8080|8043)">
				<parameters>
					<add key="debug" value="true" />
				</parameters>
			</add>
		</sites>
		<parameters>
			<add key="culture" value="en" />
			<add key="debug" value="false" />
		</parameters>
	</xrc>

</configuration>