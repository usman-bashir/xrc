<?xml version="1.0" encoding="utf-8" ?>
<xrc:page xmlns:xrc="urn:xrc"
         xmlns:File="xrc:FileModule">

	<xrc:parameters>
		<xrc:add key="title" value="books" />
		<xrc:add key="activeMenu" value="books" />
	</xrc:parameters>

	<!-- layout="~/shared/_layout" set as default -->
	<xrc:action method="GET">
		<xrc:XsltView>
			<Xslt>@File.Xml("index.xslt")</Xslt>
			<Data>@File.Xml("books.xml")</Data>
		</xrc:XsltView>
	</xrc:action>

</xrc:page>
